<div class="container">
  <div class="header">
    <div class="container-fluid">
      <div class="navbar-header">
        <%= link_to t('portal_name'), root_path, class: "navbar-brand" %>
      </div>
      <div class="pull-right">
        <%= link_to_unless_current ("English "+(image_tag "en.png")).html_safe, locale: "en" %> |
        <%= link_to_unless_current ("ÄŒesky "+image_tag("cs.png")).html_safe, locale: "cs" %>
      </div>
    </div>
    <nav>
      <ul class="nav nav-pills pull-right">
        <li><%= link_to t('home'), root_path %></li>
        <% if logged_in? %>
          <li><%= link_to t('competitions'), competitions_path %></li>
          <li><%= link_to t('teams'), teams_path %></li>
          <li><%= link_to t('members'), members_path %></li>
          <li><%= link_to t('administration'), "" %></li>
          <li><%= link_to t('users'), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to link_to t('profile'), current_user %></li>
              <li><%= link_to t('settings'), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t('logout'), logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t('login'), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</div>
