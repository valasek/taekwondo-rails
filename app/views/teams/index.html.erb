<p id="notice"><%= notice %></p>

<h1><%= t('teams') %> <small>(<%= @teams.count %>)</small></h1>

<table class="table">
  <thead>
    <tr>
      <th><%= t('team_name')%></th>
      <th><%= t('no_of_members')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= @members[team.id] %></td>
        <% if current_user.admin %>
          <td><%= link_to t('show'), team %></td>
          <td><%= link_to t('edit'), edit_team_path(team) %></td>
          <td><%= link_to t('destroy'), team, method: :delete, data: { confirm: t('are_you_sure') } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% if current_user.admin %>
    <br>
  <%= link_to t('new_team'), new_team_path, class: 'btn btn-primary' %>
<% end %>
